!!!
%html
  %head
    %meta{http: {equiv: 'Content-Type'}, content: 'text/html; charset=UTF-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %title< #{settings.sitename}#{@page.headtitle}
    %meta{property: 'og:title', content: settings.sitename + @page.headtitle}
    %meta{name: 'description', content: @page.metadata.description}
    %meta{property: 'og:description', content: @page.metadata.description}
    - if not ENV['FACEBOOK_APP_ID'].nil?
      %meta{property: 'fb:app_id', content: ENV['FACEBOOK_APP_ID']}
    %link{href: '/css/bootstrap.min.css', rel: 'stylesheet', media: 'screen'}
    %link{href: '/css/style.css', rel: 'stylesheet'}
    %link{href: '/css/font-awesome.min.css', rel: 'stylesheet'}
    -if @include_rss 
      %link{rel: 'alternate', type: 'application/rss+xml', href: '/rss'}
  %body
    .wrapper
      %header.navbar.navbar-static-top
        .navbar-header
          %button.btn.btn-navbar.navbar-toggle{type: 'button', data: {target: '.navbar-collapse', toggle: 'collapse'}}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: '/'} #{settings.sitename}
        %nav.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{class: active?}
              %a{href: '/'}
                %i.fa.fa-home
                Home
            - if settings.articles.size > 3
              %li.dropdown{class: active?('blog')}
                %a{href: '/blog'}
                  %i.fa.fa-comments
                  Blog Archive
            %li{class: active?('firefox-addons')}
              %a{href: '/firefox-addons'}
                %i.fa.fa-puzzle-piece
                Firefox Add-ons
            %li{class: active?('projects')}
              %a{href: '/projects'}
                %i.fa.fa-wrench
                Projects
          %ul.nav.navbar-nav.navbar-right
            %li{class: active?('about')}
              %a{href: '/about'}
                %i.fa.fa-question-circle 
                About
            %li{class: active?('contact')}
              %a{href: '/contact'}
                %i.fa.fa-envelope
                Contact
      .content
        = yield
      .push
    .footer
      %p.pull-left
        -if @include_rss 
          %a.link.rsslink{href: '/rss', title: "Subscribe to my blog with RSS; yes, people still use it."}
            %i.fa.fa-rss
            Subscribe
        %a.link.twitterlink{href: 'http://www.twitter.com/Ben_Basson', title: "Follow me on Twitter."}
          %i.fa.fa-twitter
          Twitter
      %p Copyright Â© 2003 - #{Time.now.year} Ben Basson
    %script{src: '/js/jquery-2.0.3.min.js', defer: true}
    %script{src: '/js/bootstrap.min.js', defer: true}